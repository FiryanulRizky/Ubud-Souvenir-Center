<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.ubudsouvenircenter.KelolaTransaksi4">
    <WebView
        android:id="@+id/headertransaksi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
<LinearLayout
    android:id="@+id/linear_transaksi"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="ScrollViewSize">
            <Button
                android:id="@+id/btnkembalitrans"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/textlines"
                android:gravity="center"
                android:text="KELOLA DAFTAR TRANSAKSI"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintTop_toTopOf="@+id/linear_transaksi"
                tools:ignore="HardcodedText" />

    <WebView
        android:id="@+id/transaksi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        app:layout_constraintTop_toBottomOf="@id/btnkembalitrans" />
</LinearLayout>
    </ScrollView>
</LinearLayout>